{
  "name": "@chihaya-ui/react",
  "version": "0.1.0",
  "description": "Chihaya UI is modern React component library",
  "keywords": [
    "react",
    "components",
    "ui",
    "tailwindcss",
    "component-library"
  ],
  "author": "Hayato Hasegawa",
  "license": "MIT",
  "packageManager": "bun@1.3.1",
  "engines": {
    "node": ">=22.16.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hasegawa-101/chihaya-ui.git",
    "directory": "packages/react"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup --dts",
    "dev": "vite build --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "peerDependencies": {
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0"
  },
  "dependencies": {
    "clsx": "2.0.0",
    "lucide-react": "0.552.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "3.3.1",
    "tailwind-variants": "3.1.1"
  },
  "devDependencies": {
    "@tailwindcss/cli": "4.1.16",
    "@tailwindcss/postcss": "4.1.16",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitejs/plugin-react-swc": "4.2.0",
    "esbuild": "0.25.12",
    "tailwindcss": "4.1.16",
    "tsup": "8.5.0",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vite": "7.1.12"
  }
}
