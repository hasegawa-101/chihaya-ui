{
  "name": "@chihaya-ui/react",
  "version": "0.1.0",
  "description": "Chihaya UI is modern React component library",
  "keywords": [
    "react",
    "components",
    "ui",
    "tailwind",
    "tailwindcss",
    "component-library"
  ],
  "author": "Hayato Hasegawa",
  "license": "MIT",
  "packageManager": "bun@1.3.1",
  "engines": {
    "node": ">=22.16.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hasegawa-101/chihaya-ui.git",
    "directory": "packages/react"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite build --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "peerDependencies": {
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0"
  },
  "dependencies": {
    "clsx": "2.0.0",
    "lucide-react": "0.552.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-variants": "3.1.1"
  },
  "devDependencies": {
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitejs/plugin-react-swc": "4.2.0",
    "tailwindcss": "4.1.16",
    "typescript": "5.9.3",
    "vite": "7.1.12"
  }
}
