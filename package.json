{
  "name": "chihaya-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "bun@1.3.1",
  "engines": {
    "node": ">=22.16.0"
  },
  "workspaces": [
    "packages/*",
    "sandbox/*"
  ],
  "scripts": {
    "build": "bun --filter '@chihaya-ui/react' build",
    "typecheck": "bun --filter '@chihaya-ui/react' typecheck",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "bunx chromatic --project-token=$CHROMATIC_PROJECT_TOKEN",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@changesets/cli": "2.29.7",
    "@storybook/addon-a11y": "10.0.2",
    "@storybook/addon-docs": "10.0.2",
    "@storybook/addon-links": "10.0.2",
    "@storybook/addon-onboarding": "10.0.2",
    "@storybook/react": "10.0.2",
    "@storybook/react-vite": "10.0.2",
    "@storybook/testing-library": "0.2.2",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitejs/plugin-react-swc": "4.2.0",
    "@tailwindcss/postcss": "4.1.16",
    "chromatic": "13.3.3",
    "postcss": "8.5.6",
    "storybook": "10.0.2",
    "tailwindcss": "4.1.16",
    "typescript": "5.9.3",
    "vite": "7.1.12"
  }
}
